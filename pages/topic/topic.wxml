<!--pages/topic/topic.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">{{topic.id}}</view>
        <view class="page__desc">{{topic.title}}</view>
    </view>
    <view class="page__bd">
        <view class="weui-article">
            <view class="weui-article__h1">{{topic.id}}</view>
            <view class="weui-article__section">
                <view class="weui-article__title">{{topic.title}}</view>
                <view class="weui-article__section">
                    {{topic.body}}
                </view>
            </view>
        </view>
    </view>
</view>
