<!--index.wxml-->
<view class="container">
  <view class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatar}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.name}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{userInfo.introduction}}</text>
  </view>
</view>
